{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "bld",
    "rootDir": "src",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "stripInternal": true,
    "newLine": "LF",
    "types": ["socket.io-client"],
    "baseUrl": ".",
    "paths": {
      "mobx": ["../types/node_modules/mobx"]
    },
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": ["src", "types"]
}
