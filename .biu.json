{
  "tasks": {
    "lint-core": {
      "executable": "tslint",
      "args": ["-p", "core"],
      "problemMatcher": "$typescript:tslint"
    },
    "lint-server": {
      "executable": "tslint",
      "args": ["-p", "server"],
      "problemMatcher": "$typescript:tslint"
    },
    "lint-client": {
      "executable": "tslint",
      "args": ["-p", "client"],
      "problemMatcher": "$typescript:tslint"
    },
    "lint-example-design": {
      "executable": "tslint",
      "args": ["-p", "examples/design"],
      "problemMatcher": "$typescript:tslint"
    },
    "build-core": {
      "executable": "tsc",
      "args": ["-p", "core", "-w"],
      "problemMatcher": "$typescript:tsc-watch"
    },
    "build-server": {
      "executable": "tsc",
      "args": ["-p", "server", "-w"],
      "problemMatcher": "$typescript:tsc-watch"
    },
    "build-client": {
      "executable": "tsc",
      "args": ["-p", "client", "-w"],
      "problemMatcher": "$typescript:tsc-watch"
    },
    "build-example-design": {
      "executable": "tsc",
      "args": ["-p", "examples/design", "-w"],
      "problemMatcher": "$typescript:tsc-watch"
    },
    "start-example-design-server": {
      "executable": "node",
      "args": ["bld/server/main.js"],
      "cwd": "examples/design",
      "watch": ["bld/server/**"]
    },
    "start-example-design-client": {
      "executable": "node",
      "args": ["bld/client/main.js"],
      "cwd": "examples/design",
      "watch": ["bld/client/**"]
    }
  }
}
