{
  "tasks": {
    "lint-core": {
      "executable": "tslint",
      "args": ["-p", "core/src/library"],
      "problemMatcher": "$typescript:tslint",
      "autoClose": true
    },
    "lint-server": {
      "executable": "tslint",
      "args": ["-p", "server/src/library"],
      "problemMatcher": "$typescript:tslint",
      "autoClose": true
    },
    "lint-client": {
      "executable": "tslint",
      "args": ["-p", "client/src/library"],
      "problemMatcher": "$typescript:tslint",
      "autoClose": true
    },
    "build-core": {
      "executable": "tsc",
      "args": ["-p", "core/src/library", "-w"],
      "problemMatcher": "$typescript:tsc-watch"
    },
    "build-server": {
      "executable": "tsc",
      "args": ["-p", "server/src/library", "-w"],
      "problemMatcher": "$typescript:tsc-watch"
    },
    "build-client": {
      "executable": "tsc",
      "args": ["-p", "client/src/library", "-w"],
      "problemMatcher": "$typescript:tsc-watch"
    }
  }
}
